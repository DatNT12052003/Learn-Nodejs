<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .act {
        text-align: center;
    }

    .act-edit {
        background-color: rgb(50, 124, 221);
        color: white;
        border: 1px solid rgb(50, 124, 221);
        border-radius: 5px;
        margin-right: 10px;
        height: 15px;
        width: 25px;
        cursor: pointer;
    }

    .act-edit:hover {
        background-color: white;
        color: rgb(50, 124, 221);
        border: 1px solid rgb(0, 0, 0);
    }

    .act-delete {
        background-color: rgb(209, 18, 18);
        color: white;
        border: 1px solid rgb(209, 18, 18);
        margin-left: 10px;
        border-radius: 5px;
        height: 15px;
        width: 25px;
        cursor: pointer;
    }

    .act-delete:hover {
        background-color: white;
        color: rgb(209, 18, 18);
        border: 1px solid rgb(0, 0, 0);
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Actions</th>
            <% for(let i=0; i < dataTable.length; i++) { %>
        <tr>
            <td>
                <%= dataTable[i].email %>
            </td>
            <td>
                <%= dataTable[i].firstName %>
            </td>
            <td>
                <%= dataTable[i].lastName %>
            </td>
            <td>
                <%= dataTable[i].address %>
            </td>
            <td class="act">
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="act-edit" type="button">Edit</a>
                <a href="" class="act-delete" type="button">Delete</a>
            </td>
        </tr>
        <% } %>

    </table>
</body>

</html>